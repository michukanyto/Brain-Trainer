<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_3"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="217dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:gravity="fill"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/textViewOperation"
        android:layout_width="167dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="8dp"
        android:gravity="fill"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="fill"
        android:padding="10dp"
        android:text="00s"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="30dp"
        android:background="@android:color/holo_green_light"
        android:gravity="fill"
        android:text="0/0"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="200dp"
        android:gravity="fill|fill_horizontal|fill_vertical"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill|fill_horizontal|fill_vertical">

            <Button
                android:id="@+id/buttonResult1"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:padding="10dp"
                android:tag="1"
                android:text="00"
                android:textSize="56sp" />

            <Button
                android:id="@+id/buttonResult2"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:backgroundTint="@android:color/holo_purple"
                android:padding="10dp"
                android:tag="2"
                android:text="00"
                android:textSize="56sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:gravity="fill|fill_horizontal|fill_vertical">

            <Button
                android:id="@+id/buttonResult3"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:padding="10dp"
                android:tag="3"
                android:text="00"
                android:textSize="56sp" />

            <Button
                android:id="@+id/buttonResult4"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:padding="10dp"
                android:tag="4"
                android:text="00"
                android:textSize="56sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="356dp"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResult">

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewFinalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="46sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>